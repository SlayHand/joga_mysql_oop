<h1>Muuda artiklit</h1>
<form action="/article/edit/{{article.id}}" method="POST" class="form">
  <div class="field">
    <label for="name">Pealkiri</label>
    <input id="name" name="name" value="{{article.name}}" required />
  </div>
  <div class="field">
    <label for="slug">Slug</label>
    <input id="slug" name="slug" value="{{article.slug}}" required />
  </div>
  <div class="field">
    <label for="image">Pildi URL</label>
    <input id="image" name="image" value="{{article.image}}" />
  </div>
  <div class="field">
    <label for="body">Sisu</label>
    <textarea
      id="body"
      name="body"
      rows="10"
      required
    >{{article.body}}</textarea>
  </div>
  <div class="field">
    <label for="author_id">Autor ID</label>
    <input
      id="author_id"
      name="author_id"
      type="number"
      value="{{article.author_id}}"
    />
  </div>
  <button type="submit">Uuenda</button>
</form>